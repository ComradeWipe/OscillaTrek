uint8_t received_length;

        /* Infinite loop */
while (1)
{
    // Receive the data of 1 byte
    HAL_UART_Receive(&huart1, &received_length, 1, HAL_MAX_DELAY);
    printf("The received length is %d cm\n", received_length);

        if (received_length <= 50)
        {
            // Set GPIO PB0 to high voltageï¼Œoutput 3.3V
            HAL_GPIO_WritePin(GPIOB, GPIO_PIN_0, GPIO_PIN_SET);
        }
        else
        {
            // Set GPIO PB0 to low voltage
            HAL_GPIO_WritePin(GPIOB, GPIO_PIN_0, GPIO_PIN_RESET);
         }
        HAL_Delay(100); // Time delay
}
}
